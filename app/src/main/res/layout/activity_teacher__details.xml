<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B7393"
    tools:context=".Teacher_Details">

    <TextView
        android:id="@+id/updatePAGEtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Teacher Details"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateparentemailtv5"
        android:layout_width="129dp"
        android:layout_height="74dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Teacher Email"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/updateparentemailtv6"
        app:layout_constraintEnd_toStartOf="@+id/updatestudentemailet2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/updateparentemailtv6"
        android:layout_width="160dp"
        android:layout_height="84dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:text=" Password"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/udatesubmitbutton"
        app:layout_constraintEnd_toStartOf="@+id/udateparentemailet3"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/updatephonetv"
        android:layout_width="162dp"
        android:layout_height="51dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Phone no"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/updateparentemailtv5"
        app:layout_constraintEnd_toStartOf="@+id/updatephonenoet4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/udatesubmitbutton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/round_for_submit"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:shadowColor="#4CAF50"
        android:text="Submit"
        android:textColor="#FAFAFA"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/updatestudentemailet2"
        android:layout_width="210dp"
        android:layout_height="46dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round"

        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="14dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/udateparentemailet3"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/updatephonenoet4"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round"


        android:ems="10"
        android:hint="Phone No"
        android:inputType="number"
        android:paddingLeft="14dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/updatestudentemailet2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/udateparentemailet3"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round"
        android:ems="10"


        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="14dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/udatesubmitbutton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Name"
        android:textColor="#0C0C0C"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/updatephonetv"
        app:layout_constraintEnd_toStartOf="@+id/updatestudentemailet"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/updatestudentemailet"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="14dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/updatephonenoet4"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>